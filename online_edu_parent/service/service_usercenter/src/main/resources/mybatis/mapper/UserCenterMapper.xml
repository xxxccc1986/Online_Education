<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.year21.onlineedu.usercenter.mapper.UserCenterMapper">

<!--    Integer countRegisterNumInOneDay(String day);-->
    <select id="countRegisterNumInOneDay" resultType="integer">
        select count(*) from usercenter_member where DATE(gmt_create) = #{day}
    </select>

<!--    int updatePhotoById(@Param("userId") String userId, @Param("path") String path);-->
    <update id="updatePhotoById">
        update usercenter_member set avatar = #{path} where id = #{userId}
    </update>
</mapper>
